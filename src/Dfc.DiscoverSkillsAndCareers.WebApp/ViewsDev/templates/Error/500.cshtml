{% set pageName = 'home' %}
{% set pageTitle = '@Model.Title' %}
{% set pageGroup = '' %}

{% extends "_base.njk" %}

{% block pre %}
@model Dfc.DiscoverSkillsAndCareers.WebApp.Models.IndexViewModel;
@{
    ViewData["Title"] = Model.Title;
    Layout = null;
}
{% endblock %}

{% block main %}

<div class="app-masthead">
    <div class="govuk-width-container">

        {% include "_phasebanner.njk" %}

        {{ govukBreadcrumbs({
        items: [
        {
        text: "Home: @Model.Headline"
        }
        ]
        }) }}

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full govuk-grid-column-two-thirds-from-desktop">
                <h1 class="govuk-heading-xl app-masthead__title">@Model.Headline</h1>
            </div>
        </div>

    </div>
</div>

<main id="content" role="main">

    <div class="govuk-width-container">
        <div class="govuk-grid-row govuk-!-margin-bottom-9 govuk-!-margin-top-7">

            <h1 class="govuk-heading-xl">Sorry, there is a problem with the service</h1>
            <p class="govuk-body">Try again later.</p>

        </div>
    </div>

</main>

{% endblock %}
