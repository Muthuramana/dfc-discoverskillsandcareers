{% set pageName = 'resume-code' %}
{% set pageGroup = '' %}

{% extends "_base.njk" %}

{% block pre %}
@model Dfc.DiscoverSkillsAndCareers.WebApp.Models.SaveProgressViewModel;
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
{% endblock %}

{% block main %}

<div class="govuk-width-container app-site-width-container">

    {% from "back-link/macro.njk" import govukBackLink %}

    {% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: "@Model.BackLink"
      }) }}
    {% endblock %}

</div>

<main id="content" role="main">
    <div class="govuk-main-wrapper govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">What is your email?</h1>

                <div class="govuk-body">

                    <form action="/save-my-progress/email" method="post">
                        {{ govukInput({
                        label: {
                            text: "Email"
                        },
                        classes: "govuk-input--width-20",
                        type: "email",
                        id: "email",
                        name: "email"
                        }) }}
                        {{ govukButton({
                            text: "Send"
                        }) }}
                    </form>

                    @Model.ErrorMessage
                </div>

            </div>
        </div>
    </div>
</main>

{% endblock %}
