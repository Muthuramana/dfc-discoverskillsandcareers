{% set pageName = 'resume-code' %}
{% set pageGroup = '' %}

{% extends "_base.njk" %}

{% block pre %}
@model Dfc.DiscoverSkillsAndCareers.WebApp.Models.SaveProgressViewModel;
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
{% endblock %}

{% block main %}

  <div class="govuk-width-container app-site-width-container">

    {% include "_phasebanner.njk" %}

    {{ govukBreadcrumbs({
      items: [
        {
          text: "Home: Discover your skills and careers",
          href: "/"
        },
        {
          text: "Save your progress"
        }
      ]
    }) }}

  </div>

  <main id="content" role="main">
    <div class="govuk-main-wrapper govuk-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

          <h1 class="govuk-heading-xl visually-hidden">Save your progress</h1>

          <form action="/save-my-progress" method="post">

              {{ govukRadios({
              idPrefix: "SelectedOption",
              name: "SelectedOption",
              fieldset: {
                legend: {
                  text: "Choose how to recieve your results",
                  isPageHeading: true,
                  classes: "govuk-fieldset__legend--xl"
                }
              },
              items: [
                {
                  value: "email",
                  text: "Email"
                },
                {
                  value: "sms",
                  text: "SMS"
                },
                {
                  value: "reference",
                  text: "Reference"
                }
              ]
            }) }}

              {{ govukButton({
              text: "Next"
            }) }}

          </form>

          <div class="govuk-body">

            <p>
              Wire these to form radios:
              <a href="/save-my-progress/email">Email</a>
              <a href="/save-my-progress/sms">Sms</a>
              <a href="/save-my-progress/reference">Reference</a>
            </p>

            <p><a href="#">Return to assessment</a></p>

          </div>

        </div>
      </div>
    </div>
  </main>

{% endblock %}
