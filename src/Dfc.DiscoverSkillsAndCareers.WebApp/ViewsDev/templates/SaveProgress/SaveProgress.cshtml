{% set pageName = 'resume-code' %}
{% set pageGroup = '' %}

{% extends "_base.njk" %}

{% block pre %}
@model Dfc.DiscoverSkillsAndCareers.WebApp.Models.SaveProgressViewModel;
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
{% endblock %}

{% block main %}

<div class="govuk-width-container app-site-width-container">

    {% from "back-link/macro.njk" import govukBackLink %}

    {% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: "@Model.BackLink"
      }) }}
    {% endblock %}

</div>

  <main id="content" role="main">
    <div class="govuk-main-wrapper govuk-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

          <h1 class="govuk-heading-xl visually-hidden">Save your progress</h1>

          <form action="/save-my-progress" method="post">

              {{ govukRadios({
              idPrefix: "SelectedOption",
              name: "SelectedOption",
              fieldset: {
                legend: {
                  text: "Choose how to recieve your results",
                  isPageHeading: true,
                  classes: "govuk-fieldset__legend--xl"
                }
              },
              items: [
                {
                  value: "email",
                  text: "Send me an email"
                },
                {
                  value: "sms",
                  text: "Send me a text"
                },
                {
                  value: "reference",
                  text: "Give me a reference number"
                }
              ]
            }) }}

              {{ govukButton({
              text: "Next"
            }) }}

          </form>

          <div class="govuk-body">

            <p><a href="@Model.BackLink">Return to assessment</a></p>

          </div>

        </div>
      </div>
    </div>
  </main>

{% endblock %}
